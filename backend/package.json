{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "packageManager": "bun@1.2.21",
  "scripts": {
    "dev": "bun run encore run",
    "build": "bun run encore build",
    "build:docker": "bun run encore build docker",
    "build:frontend": "cd ../frontend && bun install && bun run build",
    "db:migrate": "bun run encore db migrate",
    "db:reset": "bun run encore db reset",
    "db:seed": "bun run encore run --seed",
    "gen:client": "bun run encore gen client --lang typescript",
    "test": "bun run jest",
    "test:watch": "bun run jest --watch",
    "test:coverage": "bun run jest --coverage"
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "encore.dev": "^1.49.1",
    "jsonwebtoken": "^9.0.2",
    "pdfkit": "^0.14.0",
    "xlsx": "^0.18.5"
  },
  "bin": {
    "encore": "./node_modules/.bin/encore"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/pdfkit": "^0.12.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.9.2"
  }
}
