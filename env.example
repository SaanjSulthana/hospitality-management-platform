# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/hospitality_platform

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here

# Server Configuration
PORT=4000
NODE_ENV=development

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:4000
VITE_APP_NAME=Hospitality Management Platform

# Email Configuration (for password reset, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Redis Configuration (for caching and sessions)
# Set REDIS_HOST to enable Redis cache (leave empty to use in-memory cache)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=  # Leave empty for local development (no password by default)
REDIS_USE_TLS=false
REDIS_MAX_RETRIES=3
REDIS_CONNECT_TIMEOUT=5000

# Cache Configuration
# Optional: Enable for 24-48h in staging to catch UTC legacy keys
CACHE_DEFENSIVE_INVALIDATION=false

# Optional: Enable if cache-only invalidation isn't fast enough
ENABLE_SYNC_DCB_UPDATE=false

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
